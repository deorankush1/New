<?xml version="1.0"?>
<config>
    <modules>
        <Ambab_Customer>
            <version>1.0.0</version>
        </Ambab_Customer>
    </modules>
    <global>
        <helpers>
            <Ambab_customer>
                <class>Ambab_Customer_Helper</class>
            </Ambab_customer>
        </helpers>
        <resources>
            <Ambab_customer_setup>
                <setup>
                    <module>Ambab_Customer</module>
                    <class>Mage_Customer_Model_Resource_Setup</class>
                </setup>
            </Ambab_customer_setup>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <Ambab_customer>
                    <file>Ambab_customer.xml</file>
                </Ambab_customer>
            </updates>
        </layout>
        <translate>
            <modules>
                <Ambab_Customer>
                    <files>
                        <default>Ambab_Customer.csv</default>
                    </files>
                </Ambab_Customer>
            </modules>
        </translate>
    </frontend>
</config>